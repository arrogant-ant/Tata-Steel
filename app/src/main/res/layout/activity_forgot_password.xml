<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sabita_sant.niwaas.forgotPassword"
    android:background="@drawable/nb"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:id="@+id/password"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwoRD"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRM PASSWORD"
        android:id="@+id/confirm"
        android:layout_below="@+id/passwoRD"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/COnfirm"
        android:layout_below="@+id/confirm"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT SECURITY QUESTION"
        android:id="@+id/securiTY"
        android:layout_below="@+id/COnfirm"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your pet name?"
        android:id="@+id/PETname"
        android:textStyle="bold"
        android:checked="false"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/securiTY" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your favourite color?"
        android:textStyle="bold"
        android:id="@+id/favcolor"
        android:checked="false"
        android:layout_below="@+id/petname"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your father&apos;s middle name?"
        android:textStyle="bold"
        android:id="@+id/fathername"
        android:checked="false"
        android:layout_below="@+id/schooLName"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/petname"
        android:layout_below="@+id/PETname"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favColor"
        android:layout_below="@+id/favcolor"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your school&apos;s  name?"
        android:textStyle="bold"
        android:id="@+id/schoolname"
        android:checked="false"
        android:layout_below="@+id/favColor"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schooLName"
        android:layout_below="@+id/schoolname"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/favColor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FMName"
        android:layout_below="@+id/fathername"
        android:layout_alignEnd="@+id/schooLName"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/submit"
        android:layout_below="@+id/FMName"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
