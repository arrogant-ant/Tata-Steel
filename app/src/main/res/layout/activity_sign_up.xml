<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.example.sabita_sant.niwaas.SignUp"
    android:orientation="vertical"
    android:background="@drawable/nb"
    >
    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/first_name"
        android:hint="first"
        android:layout_above="@+id/contact_no"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAME:"
        android:layout_above="@id/first_name"
        android:id="@+id/name" />


    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/mid_name"
        android:hint="middle"
        android:layout_alignTop="@+id/first_name"
        android:layout_toEndOf="@+id/first_name"
        android:textAlignment="center" />

    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="last"
        android:ems="10"
        android:id="@+id/last_name"
        android:layout_alignTop="@+id/mid_name"
        android:layout_toEndOf="@+id/mid_name"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACT N0. :"
        android:id="@+id/contact"
        android:layout_above="@+id/email_id"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/contact_no"
        android:hint="10 digit mobile number"
        android:layout_above="@+id/email_id"
        android:layout_alignStart="@+id/email_id"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERSONAL NO. :"
        android:id="@+id/personal_no"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL ID :"
        android:id="@+id/email"
        android:gravity="left"
        android:layout_above="@+id/personal"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="nextSignUp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_id"
        android:layout_alignBottom="@+id/email"
        android:layout_toEndOf="@+id/first_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/personal"
        android:layout_alignBottom="@+id/personal_no"
        android:layout_toEndOf="@+id/personal_no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADDRESS:"
        android:layout_alignBottom="@+id/address"
        android:layout_alignStart="@+id/personal_no" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/address"
        android:layout_below="@+id/personal_no"
        android:layout_toEndOf="@+id/personal_no" />

</RelativeLayout>
